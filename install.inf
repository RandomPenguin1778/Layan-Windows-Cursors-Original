; Layan Cursors windows port made by RandomPenguin1778
; https://github.com/RandomPenguin1778/

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

[Scheme.Cur]
default.cur
help.cur
progress.ani
wait.ani
text.cur
unavailable.cur
vertical.cur
horizontal.cur
diagonal1.cur
diagonal2.cur
move.cur
hand.cur
precision.cur
write.cur
alternate.cur

[Scheme.Txt]

[Strings]
CUR_DIR       = "Cursors\LayanCursors"
SCHEME_NAME   = "Layan Cursors"
pointer       = "default.cur"
help          = "help.cur"
work          = "progress.ani"
busy          = "wait.ani"
text          = "text.cur"
unavailiable  = "unavailable.cur"
vert          = "vertical.cur"
horz          = "horizontal.cur"
dgn1          = "diagonal1.cur"
dgn2          = "diagonal2.cur
move          = "move.cur"
link          = "hand.cur"
cross         = "precision.cur"
hand          = "write.cur"
alternate     = "alternate.cur"
